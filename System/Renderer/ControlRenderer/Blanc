<?php

namespace System\Renderer\ControlRenderer;

use System\Core\Controls as Controls;

use System\Renderer\ControlRenderer\ControlInterface as ControlInterface;

class Blanc extends AbstractContent implements ControlInterface
{
    public function __construct($typeData, $data)
    {
        parent::__construct($typeData, $data);
        $this->setData();
    }
    
    private function setData()
    {
        foreach ($this->typeData as $key => $value) {
            if (!property_exists(__CLASS__, $key)) {
                continue;
            }
            $this->$key = $value;
        }
    }
    
    public function render(): string
    {
        $content = Controls::drawDiv('main_background', "container-fluid main_background", '', '');
        $cell = Controls::drawCell('cell_main', "p-30", '[Poner contenido aqu√≠]', '');
        $row = Controls::drawRow("row_main", '', $cell, '') ;
        $grid = Controls::drawGrid("grid_main", '', $row, '', 12);
        $content .= $grid;
        return $content;
    }

}
